<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <title><%= (typeof item !== 'undefined' && item) ? "収支の編集" : "新しい収支の追加" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/styles.css" />
  <script defer src="/main.js"></script>
</head>
<body>
  <header class="header">
    <div class="header-left">
      <a href="/" class="logo">Money App</a>
    </div>
    <nav class="header-right">
      <a href="/items" class="nav-link">一覧</a>
      <a href="/auth/logout" class="nav-link">ログアウト</a>
    </nav>
  </header>

  <main class="container">
    <section class="card">
      <h1><%= (typeof item !== 'undefined' && item) ? "収支の編集" : "新しい収支の追加" %></h1>

      <% 
        const isEdit = (typeof item !== 'undefined' && item);
        const actionUrl = isEdit ? "/items/edit" : "/items/new";
        const defaultDate = isEdit && item.date
          ? item.date.toISOString().slice(0,10)
          : new Date().toISOString().slice(0,10);
      %>

      <form action="<%= actionUrl %>" method="POST" class="form">
        <% if (isEdit) { %>
          <input type="hidden" name="id" value="<%= item.id %>" />
        <% } %>

        <label>
          日付
          <input type="date" name="date" value="<%= defaultDate %>" required />
        </label>

        <label>
          項目名
          <input
            type="text"
            name="event"
            value="<%= isEdit ? item.event : '' %>"
            placeholder="おやつ代、給料 など"
            required
          />
        </label>

        <label>
          区分
          <select name="type" required>
            <option value="">選択してください</option>
            <option value="INCOME" <%= isEdit && item.type === "INCOME" ? "selected" : "" %>>
              収入
            </option>
            <option value="EXPENSE" <%= isEdit && item.type === "EXPENSE" ? "selected" : "" %>>
              支出
            </option>
          </select>
        </label>

        <label>
          金額
          <input
            type="number"
            name="amount"
            min="0"
            step="1"
            value="<%= isEdit ? item.amount : '' %>"
            required
          />
        </label>

        <label>
          メモ（任意）
          <textarea
            name="memo"
            rows="3"
            placeholder="メモがあれば入力してください"
          ><%= isEdit && item.memo ? item.memo : "" %></textarea>
        </label>

        <div class="form-actions">
          <a href="/items" class="btn ghost">一覧に戻る</a>
          <button type="submit" class="btn primary">
            <%= isEdit ? "更新する" : "追加する" %>
          </button>
        </div>
      </form>
    </section>
  </main>
</body>
</html>
