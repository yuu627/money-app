<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <title>収支一覧</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/styles.css" />
  <script defer src="/main.js"></script>
</head>
<body>
  <!-- ログイン後のヘッダー -->
  <header class="site-header">
    <div class="site-header__inner">
      <div class="logo">money tracker</div>
      <nav class="site-nav">
        <a href="/items" class="nav-link active">一覧</a>
        <a href="/items/new" class="nav-link">新規追加</a>
        <form action="/auth/logout" method="POST" class="logout-form">
          <button type="submit" class="btn ghost">ログアウト</button>
        </form>
      </nav>
    </div>
  </header>

  <main class="container">
    <!-- サマリー -->
        <!-- サマリー -->
    <section class="summary-bar">
      <%
        // summary が undefined でもエラーにならないようにガード
        const s = (typeof summary !== "undefined" && summary) ? summary : {};
        const income  = Number(s.income  || 0);
        const expense = Number(s.expense || 0);
        const bal     = Number(
          typeof s.balance !== "undefined" ? s.balance : (income - expense)
        );
        function formatYen(n) {
          return Number(n || 0).toLocaleString("ja-JP");
        }
      %>

      <div class="summary-item income">
        <span class="label">総収入</span>
        <span class="value"><%= formatYen(income) %> 円</span>
      </div>

      <div class="summary-item expense">
        <span class="label">総支出</span>
        <span class="value"><%= formatYen(expense) %> 円</span>
      </div>

      <div class="summary-item balance">
        <span class="label">残高</span>
        <span class="value"><%= formatYen(bal) %> 円</span>
      </div>
    </section>


    <!-- フィルタ -->
    <section class="card">
      <h2 class="card-title">フィルタ</h2>
      <form class="filters" method="GET" action="/items">
        <div class="filters-row">
          <div class="field">
            <label for="type">収支区分</label>
            <select id="type" name="type">
              <option value="ALL" <%= filterType === "ALL" ? "selected" : "" %>>すべて</option>
              <option value="INCOME" <%= filterType === "INCOME" ? "selected" : "" %>>収入のみ</option>
              <option value="EXPENSE" <%= filterType === "EXPENSE" ? "selected" : "" %>>支出のみ</option>
            </select>
          </div>

          <div class="field">
            <label>期間</label>
            <div class="date-range">
              <input type="date" name="start" value="<%= start %>" />
              <span>〜</span>
              <input type="date" name="end" value="<%= end %>" />
            </div>
          </div>

          <div class="field buttons">
            <button type="submit" class="btn primary">フィルタを適用</button>
            <a href="/items" class="btn ghost">リセット</a>
          </div>
        </div>
      </form>
    </section>

    <!-- フラッシュメッセージ -->
    <% if (successMessages && successMessages.length) { %>
      <div class="alert alert-success">
        <% successMessages.forEach(function(msg){ %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (errorMessages && errorMessages.length) { %>
      <div class="alert alert-error">
        <% errorMessages.forEach(function(msg){ %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <!-- 一覧 -->
    <section class="card">
      <div class="card-header">
        <h2 class="card-title">収支一覧</h2>
        <a href="/items/new" class="btn primary">＋ 新しい収支を追加</a>
      </div>

      <table class="items-table">
        <thead>
          <tr>
            <th>日付</th>
            <th>区分</th>
            <th>項目名</th>
            <th class="align-right">金額</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% if (!items || items.length === 0) { %>
            <tr>
              <td colspan="5" class="empty">まだ収支が登録されていません。</td>
            </tr>
          <% } else { %>
            <% items.forEach(function(item){ %>
              <tr class="<%= item.type === 'INCOME' ? 'row-income' : 'row-expense' %>">
                <td><%= item.date.toISOString().slice(0,10) %></td>
                <td>
                  <span class="badge <%= item.type === 'INCOME' ? 'badge-income' : 'badge-expense' %>">
                    <%= item.type === "INCOME" ? "収入" : "支出" %>
                  </span>
                </td>
                <td>
                  <a href="/items/<%= item.id %>"><%= item.event %></a>
                </td>
                <td class="align-right">
                  <%= formatYen(item.amount) %> 円
                </td>
                <td>
                  <div class="table-actions">
                    <a href="/items/<%= item.id %>/edit" class="link">編集</a>
                    <form action="/items/<%= item.id %>/delete" method="POST" onsubmit="return confirm('削除してよろしいですか？');">
                      <button type="submit" class="link danger">削除</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
    </section>
  </main>
</body>
</html>
