<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <title>家計簿</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/styles.css" />
  <script defer src="/main.js"></script>
</head>
<body>
  <header class="header">
    <div class="header-left">
      <a href="/" class="logo">Money App</a>
    </div>
    <nav class="header-right">
      <a href="/items" class="nav-link">一覧</a>
      <a href="/auth/logout" class="nav-link">ログアウト</a>
    </nav>
  </header>

  <main class="container">
    <!-- フラッシュメッセージ -->
    <% if (errorMessages && errorMessages.length) { %>
      <div class="alert alert-error">
        <% errorMessages.forEach(function(msg){ %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>

    <% if (successMessages && successMessages.length) { %>
      <div class="alert alert-success">
        <% successMessages.forEach(function(msg){ %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>

    <!-- サマリー -->
    <%
      const income = typeof totalIncome !== 'undefined' ? totalIncome : 0;
      const expense = typeof totalExpense !== 'undefined' ? totalExpense : 0;
      const balance = income - expense;
    %>

    <section class="summary-bar">
      <div class="summary-item income">
        <p class="label">総収入</p>
        <p class="value"><%= income %> 円</p>
      </div>
      <div class="summary-item expense">
        <p class="label">総支出</p>
        <p class="value"><%= expense %> 円</p>
      </div>
      <div class="summary-item balance">
        <p class="label">残高</p>
        <p class="value"><%= balance %> 円</p>
      </div>
    </section>

    <!-- フィルター -->
    <%
      const ft = (typeof filterType !== 'undefined' && filterType) ? filterType : 'all';
      const sd = (typeof startDate !== 'undefined' && startDate) ? startDate : '';
      const ed = (typeof endDate !== 'undefined' && endDate) ? endDate : '';
    %>

    <section class="card">
      <form action="/items" method="GET" class="filter-bar">
        <div class="filter-group">
          <label>収支区分</label>
          <select name="type">
            <option value="all" <%= ft === 'all' ? 'selected' : '' %>>すべて</option>
            <option value="INCOME" <%= ft === 'INCOME' ? 'selected' : '' %>>収入のみ</option>
            <option value="EXPENSE" <%= ft === 'EXPENSE' ? 'selected' : '' %>>支出のみ</option>
          </select>
        </div>

        <div class="filter-group">
          <label>開始日</label>
          <input type="date" name="startDate" value="<%= sd %>" />
        </div>

        <div class="filter-group">
          <label>終了日</label>
          <input type="date" name="endDate" value="<%= ed %>" />
        </div>

        <button type="submit" class="btn">フィルタ適用</button>
        <a href="/items" class="btn ghost">リセット</a>
      </form>
    </section>

    <!-- 新規追加ボタン -->
    <section class="card">
      <div class="card-header">
        <h2>収支一覧</h2>
        <a href="/items/new" class="btn primary">＋ 新規追加</a>
      </div>

      <%
        const list = typeof items !== 'undefined' && items ? items : [];
      %>

      <% if (list.length === 0) { %>
        <p>該当するデータがありません。</p>
      <% } else { %>
        <table class="items-table">
          <thead>
            <tr>
              <th>日付</th>
              <th>項目名</th>
              <th>区分</th>
              <th class="right">金額</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% list.forEach(function(item){ %>
              <tr>
                <td><%= item.date.toISOString().slice(0, 10) %></td>
                <td>
                  <a href="/items/detail?id=<%= item.id %>">
                    <%= item.event %>
                  </a>
                </td>
                <td>
                  <% if (item.type === 'INCOME') { %>
                    <span class="badge income">収入</span>
                  <% } else { %>
                    <span class="badge expense">支出</span>
                  <% } %>
                </td>
                <td class="right"><%= item.amount %> 円</td>
                <td class="right">
                  <a href="/items/edit?id=<%= item.id %>" class="table-link">編集</a>
                  <form action="/items/delete" method="POST" style="display:inline">
                    <input type="hidden" name="id" value="<%= item.id %>" />
                    <button type="submit" class="table-link danger" onclick="return confirm('削除しますか？');">
                      削除
                    </button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>
    </section>
  </main>
</body>
</html>
